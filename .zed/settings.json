{
  "formatter": [{ "external": { "command": "dprint", "arguments": ["fmt", "--stdin", "{buffer_path}"] } }],
  "prettier": { "allowed": false },
  "wrap_guides": [80],
  "file_types": { "Dockerfile": ["Dockerfile", "Dockerfile.*"] },
  "languages": {
    "Python": {
      "language_servers": ["pylsp", "ty", "ruff", "basedpyright", "..."],
      "wrap_guides": [88]
    },
    "TOML": { "wrap_guides": [110] },
    "YAML": { "wrap_guides": [160] }
  },
  "context_servers": {
    "blender": {
      "enabled": false,
      "command": "uv",
      "args": ["run", "blender-mcp"],
      "env": { "UV_PROJECT": "/home/kjanat/projects/blender-mcp" }
    },
    "blender-git": {
      "enabled": true,
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/kjanat/blender-mcp",
        "blender-mcp"
      ],
      "env": {}
    }
  },
  "lsp": {
    "pylsp": {
      "initialization_options": {
        "pylsp": {
          "plugins": {
            "pycodestyle": { "ignore": ["E203", "W503"] }
          }
        }
      }
    }
  }
}
